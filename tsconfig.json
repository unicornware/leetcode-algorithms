{
  // SEE: https://github.com/tsconfig/bases/blob/main/bases/node14.json
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@doubles/*": ["__doubles__/*"],
      "@fixtures/*": ["__fixtures__/*"],
      "@helpers/*": ["tools/helpers/*"],
      "@leetcode-algorithms/*": ["src/*"],
      "@tests/*": ["__tests__/*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2020",
    "useDefineForClassFields": true
  },
  "files": ["typings/index.d.ts"],
  "exclude": ["./coverage", "./node_modules"],
  "include": ["**/*.cjs", "**/*.ts", "**/.*.cjs", "**/.*.ts"],
  // SEE: https://typestrong.org/ts-node/docs/configuration
  "ts-node": {
    "compilerOptions": {},
    "moduleTypes": {},
    "require": ["./tools/helpers/tsconfig-paths.cjs"],
    "transpileOnly": true
  }
}
